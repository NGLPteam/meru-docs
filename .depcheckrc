ignores: [
  # included in astro, not missing
  "astro:*",
  "vite",

  # required to run `astro check` on the command line
  "@astrojs/check",

  # peer dependency of @astrojs/check
  "typescript",

  # browserslist config package; referenced as a string in package.json
  "browserslist-config-baseline",

  # tsconfig.json references plugins by string name
  "@astrojs/ts-plugin",

  # .eslintrc.json references config, plugins by string name
  "globals",

  # prettier references plugins by name
  "prettier",
  "prettier-plugin-astro",
]
